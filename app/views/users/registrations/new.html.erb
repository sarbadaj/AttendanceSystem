<h4>Sign up</h4>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div>
    <%= fields_for :company do |cf| %>
      <%= f.label :company_name %><br />
      <%= cf.text_field :name, autofocus: true, :class => "form-control input-sm chat-input" %>
    <% end %>
  </div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: false, :class => "form-control input-sm chat-input" %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", :class => "form-control input-sm chat-input" %></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control input-sm chat-input" %></div><br />

  <div class="btn btn-default"><%= f.submit "Sign up" %></div>
<% end %>

<%= render "users/shared/links" %>