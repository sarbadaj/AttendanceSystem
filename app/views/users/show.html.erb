<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="row container">
      <div>
        <h4>Details of <%= @user.email %></h4>
        <table class="table table-striped table-bordered table-hover table-condensed">
          <thead>
            <th>Date</th>
            <th>Login Time</th>
            <th>Logout Time</th>
            <th>Duration</th>
          </thead>
          <% current_user.timetracks.order(created_at: :desc).each do |timetrack| %>
            <tr>
            <td><%= timetrack.created_at %></td>
            <td><%= timetrack.login_time%></td>
            <td><%= timetrack.logout_time%></td>
            <td><%= total_duration(timetrack) %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</nav>