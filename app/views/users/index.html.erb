<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="row container">
      <div class="form-login">
        <%= simple_form_for(User.new, url: user_invitation_path,
                                      html:{class: 'form-inline'}) do |f| %>
          <%= f.input :email, placeholder: 'Email', label:false %>
          <%= f.button :submit, 'Add User', class: 'btn-primary'%>
        <% end %>
      </div>
      <div>
        <table class="table table-striped table-bordered table-hover table-condensed">
          <thead>
            <th>Users</th>
            <th>Actions</th>
          </thead>
          <% @users.each do |user| %>
            <tr>
            <td><%= link_to user.email.humanize, user_path(user) %></td>
            <td>
            <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_user_path(user), remote: true %>
            
             &nbsp;&nbsp;
            <%= link_to '<i class="fa fa-minus-circle"></i>'.html_safe, user_path(user), :method => :delete, data: {confirm: "Are you sure want delete user?"}%>
            <div class="edit_user_role_<%=user.id%>">
              
            </div>
            </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</nav>